<ul class="breadcrumb">
        <li>
          <a href="#">Home</a> <span class="divider">/</span>
        </li>
        <li class="active">Infozaics</li>
      </ul>

<div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            
            <ul class="nav nav-list">
              <h3>Filters</h3>
              <li class="nav-header">By Category</li>
              <li><a href="#">Education</a></li>
              <li class="" ><a href="#">Art</a></li>
              <li><a href="#">Technology</a></li>
              <li><a href="#">Science</a></li>
              <li><a href="#">Literature</a></li>
              <li class=""><a href="#">Philosophy</a></li>
              <li><a href="#">Religion</a></li>
              <li><a href="#">Culture</a></li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <h1>

            Lastest Infozaics Posted
            <% if @search %>
            <small>Search for "<%= @search %>"</small>
            <% end %>
          </h1>
          
          <div class="row-fluid">
            <table class="table table-striped">
        <thead>
          <tr>
            <th style="width: 15%">Screenshot</th>
            <th style="width: 50%">Title</th>
            <th style="width: 15%">Modified</th>
            <th style="width: 10%">Creator</th>
            <th style="width: 10%">Actions</th>
          </tr>
        </thead>
        <tbody>
          




          <% @infozaics.each do |infozaic| %>

            <tr>
              <td>
                <%= render_static_thumb("http://beta.infozaic.com/infozaics/#{infozaic.id}", 100, 100) %>
                
              </td>
              <td>
                <h3><%= link_to(infozaic.title, infozaic, :class => "org-popover", :rel => "popover", "data-original-title" => infozaic.title, "data-content" => infozaic.description) %></h3>
                <p><%= truncate(infozaic.description, :length => 200, :omission => '...') %></p>
              </td>


              <td>
                <%= time_ago_in_words(infozaic.updated_at) %> ago
              </td>
              
              <td>
                <%= link_to infozaic.user.name, infozaic.user, :title => "View #{infozaic.user.name}'s Profile", :rel => "tooltip" %>
              </td>
              <td>
                  <%= link_to 'View', infozaic, class: "btn btn-small btn-info" %>

                  <!--
                  <%= link_to 'Edit', edit_infozaic_path(infozaic), class: "btn btn-small" %>
                  <%= link_to 'Destroy', infozaic, confirm: 'Are you sure?', method: :delete, class: "btn btn-small btn-danger" %>

                -->
                  
                </td>
            </tr>
          <% end %>
          

          
          
        </tbody>
      </table>

          <%= will_paginate @infozaics, :inner_window => 2, :outer_window => 2 %>

          </div><!--/row-->
        </div><!--/span-->
      </div><!--/row-->