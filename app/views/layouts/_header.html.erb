<header class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container<%= yield(:extrastyle) %>">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="logo" href="<%= root_path %>"><%= image_tag "logo_nav.png" %></a>
        <div class="nav-collapse">
          <ul class="nav">

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Explore <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="<%= infozaics_path %>"><i class="icon-search"></i> Browse Infozaics</a></li>
                <li><a href="<%= users_path %>"><i class="icon-user"></i> Browse Users</a></li>
                <li class="divider"></li>
                <li><a href="<%= create_path %>"><i class="icon-plus-sign"></i> Create New</a></li>
              </ul>
            </li>

          </ul>


            <form action="<%= infozaics_path %>" class="navbar-search pull-left" id="search-form" method="get">
                  <input class="search-query span2" id="s" name="s" placeholder="Search" size="16" type="text" value="">        
                  <i class="icon-search icon-white"></i>
            </form>


          <ul class="nav pull-right">
            

            <% if signed_in? %>
              <li><a href="<%= create_path %>">Create</a></li>
              <li class="divider-vertical"></li>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">

                  <li><a href="<%= url_for(current_user) %>"><i class="icon-user"></i> Profile</a></li>
                  <li><a href="<%= edit_user_path(current_user) %>"><i class="icon-cog"></i> Settings</a></li>
                  <li class="divider"></li>
                  <li><a href="<%= signout_path %>" data-method="delete" rel="nofollow"><i class="icon-off"></i> Sign Out</a>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><a class="modal-btn" data-toggle="modal" href="#signin-modal" >Sign In</a></li>
              <li><%= link_to "Register", signup_path%></li>
            <% end %>
          </ul>
        </div><!-- /.nav-collapse -->
      </div>
    </div><!-- /navbar-inner -->
</header>

<% end %>